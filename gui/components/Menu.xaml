<UserControl x:Class="dfbanka.gui.components.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:dfbanka.gui.components"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="200" Foreground="White">
    <UserControl.Resources>
        <Style x:Name="icon" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="LineHeight" Value="38" />
            <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
            <Setter Property="Width" Value="41" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="Thin" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Bold" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <TextBlock Text="&#x2699;"
                   Foreground="Red" />
        <TextBlock Text="&#x1F464;" />
        <TextBlock Text="&#x1f511;" />
    </StackPanel>
</UserControl>